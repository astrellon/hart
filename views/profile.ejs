<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
    <% include header %>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <% if (auth) { %>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
            <a href="/upload" class="btn btn-default btn-sm">Upload</a>
            <a href="/item" class="btn btn-default btn-sm">Items</a>
        <% } %>
	</div>

	<div class="row">

        <div class="col-sm-6">
            <div class="well">
                <h3>Info</h3>

                <% if (user.info) { %>
                    <p>
                        <strong>Name</strong>: <%= user.info.name %><br>
                        <strong>Text</strong>: <%= user.info.text %>
                        <% if (user.permissions.accessViaEmail) { %>
                            <strong>Access</strong>: <%= user.permissions.accessViaEmail %>
                        <% } %>

                    </p>
                <% } %>
            </div>
        </div>

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

				<% if (user.local.email) { %>
					<p>
						<strong>id</strong>: <%= user._id %><br>
						<strong>email</strong>: <%= user.local.email %><br>
                        <% if (auth) { %>
                            <strong>password</strong>: <%= user.local.password %>
                        <% } %>
					</p>
					
                    <% if (auth) { %>
                        <a href="/unlink/local" class="btn btn-default">Unlink</a>
                    <% } %>
				<% } else if (auth) { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
				<% } %>

			</div>
		</div>
	</div>

    <% include footer %>

</div>
</body>
</html>
